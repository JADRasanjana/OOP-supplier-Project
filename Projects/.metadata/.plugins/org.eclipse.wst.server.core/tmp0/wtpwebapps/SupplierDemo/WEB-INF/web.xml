<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <!-- validate supplier login servlet-->
         <servlet>
         
         	<servlet-name>Login</servlet-name>
			<servlet-class>com.supplier.SupplierLoginServlet</servlet-class> 
			        
         </servlet>
         

         <servlet-mapping>
         
         	<servlet-name>Login</servlet-name>
         	<url-pattern>/login</url-pattern>
         	
         </servlet-mapping>
            
          <!-- supplier login servlet-->
         <servlet>
         
         	<servlet-name>login</servlet-name>
			<servlet-class>com.supplier.LoginServlet</servlet-class> 
			        
         </servlet>
         
         <servlet-mapping>
         
         	<servlet-name>login</servlet-name>
         	<url-pattern>/log</url-pattern>
         	
         </servlet-mapping>
         
          <!-- supplier insert servlet-->
         <servlet>
         
         	<servlet-name>supplierInsert</servlet-name>
			<servlet-class>com.supplier.Supplierinsert</servlet-class> 
			        
         </servlet>
         
         <servlet-mapping>
         
         	<servlet-name>supplierInsert</servlet-name>
         	<url-pattern>/insert</url-pattern>
         	
         </servlet-mapping>
         
          <!-- update supplier servlet-->
         <servlet>
         
         	<servlet-name>updateSupplier</servlet-name>
			<servlet-class>com.supplier.UpdateSupplierServlet</servlet-class> 
			        
         </servlet>
         

         <servlet-mapping>
         
         	<servlet-name>updateSupplier</servlet-name>
         	<url-pattern>/update</url-pattern>
         	
         </servlet-mapping>
         
          <!--  delete supplier servlet-->
           <servlet>
         
         	<servlet-name>deleteSupplier</servlet-name>
			<servlet-class>com.supplier.DeleteSupplierServlet</servlet-class> 
			        
         </servlet>
         

         <servlet-mapping>
         
         	<servlet-name>deleteSupplier</servlet-name>
         	<url-pattern>/delete</url-pattern>
         	
         </servlet-mapping>
         
      
</web-app>